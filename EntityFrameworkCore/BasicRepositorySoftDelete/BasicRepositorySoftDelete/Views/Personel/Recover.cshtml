@model IEnumerable<BasicRepositorySoftDelete.Models.DTOs.PersonelDTO>

@{
    ViewData["Title"] = "Recover";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2>Recover List</h2>
            <hr />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Personel Id
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PersonelName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PersonelSurname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CityName)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PersonelName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PersonelSurname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CityName)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-secondary" asp-action="List">Back To List</a>
        </div>
    </div>
</div>