@model BasicRepository.Models.Views.PersonelModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2>@Model.Header</h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Personel.PersonelId" class="control-label"></label>
                    <input readonly asp-for="Personel.PersonelId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Personel.PersonelName" class="control-label"></label>
                    <input asp-for="Personel.PersonelName" class="form-control" />
                    <span asp-validation-for="Personel.PersonelName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Personel.PersonelSurname" class="control-label"></label>
                    <input asp-for="Personel.PersonelSurname" class="form-control" />
                    <span asp-validation-for="Personel.PersonelSurname" class="text-danger"></span>
                </div>
                <label class="control-label">City Name</label>
                <select class="form-control" asp-for="Personel.CityId">
                    @foreach (var item in Model.cityList)
                    {
                        if (item.CityId == Model.Personel.CityId)
                        {
                            <option selected style="color:red;" name="Personel.CityId" value="@item.CityId">@item.CityName</option>
                        }
                        else
                        {
                            <option name="Personel.CityId" value="@item.CityId">@item.CityName</option>
                        }
                    }
                </select><br />
                <div class="form-group">
                    <input type="submit" value="@Model.BtnValue" class="@Model.BtnClass" />
                    <input class="btn btn-secondary" type="submit" value="İptal" asp-action="List"/>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
