@model IEnumerable<FirstProje_1.Classes.City>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>City List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>CityId</th>
            <th>CityName</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.CityId
            </td>
            <td>
                @item.CityName
            </td>
            <td>
                <img src="@item.Picture" width="150px"/>
            </td>
            <td><a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CityId">Edit</a></td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
