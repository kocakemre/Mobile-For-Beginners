@model List<PersonelDBFirst.Models.Data.Unvan>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container">
    <h2>Ünvan Listesi</h2>
    <div class="row">
        <div class="col-md-7">


            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Ünvan Id</th>
                        <th>Ünvan Ad</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                        <th>İlgili Personel</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UnvanId</td>
                            <td>@item.UnvanAd</td>
                            <td><a class="btn btn-success" href="/Unvan/Update/@item.UnvanId">Güncelle</a></td>
                            <td><a class="btn btn-danger" href="/Unvan/Delete/@item.UnvanId">Sil</a></td>
                            <td><a class="btn btn-primary" href="/Personel/SingularList/@item.UnvanId">İlgili Personel</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a class="btn btn-primary" href="/Unvan/Create">Yeni Kayıt</a><br />
            <div class="alert alert-@Session["cls"]" role="alert">
                @Session["E"]
            </div>
        </div>
    </div>
</div>

