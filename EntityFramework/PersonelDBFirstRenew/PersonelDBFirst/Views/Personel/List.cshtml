@model List<PersonelDBFirst.Models.DTOs.PersonelDTO>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2>Personel Listesi</h2>
    <div class="row">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Personel Id</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>İkamet</th>
                        <th>Ünvan Adı</th>
                        <th>Yönetici</th>
                        <th>Uyruk</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Ad</td>
                            <td>@item.Soyad</td>
                            <td>@item.Ikamet</td>
                            <td>@item.UnvanAd</td>
                            <td>@item.Yonetici</td>
                            <td>@item.UlkeAd</td>
                            <td><a class="btn btn-success" href="/Personel/Update/@item.Id">Güncelle</a></td>
                            <td><a class="btn btn-danger" href="/Personel/Delete/@item.Id">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a class="btn btn-primary" href="/Personel/Create">Yeni Kayıt</a><br />
        </div>
    </div>
</div>

