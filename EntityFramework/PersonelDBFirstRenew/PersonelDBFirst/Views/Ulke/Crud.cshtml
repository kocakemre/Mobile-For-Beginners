@model PersonelDBFirst.Models.Views.UlkeModel
@{
    ViewBag.Title = "Crud";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2>@Model.Header</h2>
            <form method="post">
                <label>Ülke Id</label>
                <input class="form-control" type="text" name="UlkeId" value="@Model.Ulke.UlkeId" />
                <label>Ülke Adı</label>
                <input class="form-control" type="text" name="UlkeAd" value="@Model.Ulke.UlkeAd" />
                <input type="submit" value="@Model.BtnValue" class="@Model.BtnClass" />
            </form><br />
            <a class="btn btn-warning" href="/Ulke/List">İptal</a>
        </div>
    </div>
</div>

