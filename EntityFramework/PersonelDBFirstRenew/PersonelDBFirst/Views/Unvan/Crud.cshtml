@model PersonelDBFirst.Models.Views.UnvanModel

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-7">
            <h2>@Model.Baslik</h2>
            <hr />
            <form method="post">
                <div class="col-md-5">
                    <input class="form-control" type="@Model.Type" name="UnvanId" value="@Model.Unvan.UnvanId" />
                </div>
                <div class="col-md-5">
                    <label>Unvan Ad</label>
                    <input class="form-control" type="text" name="UnvanAd" value="@Model.Unvan.UnvanAd" />
                </div>
                <br />
                <input type="submit" value="@Model.BtnValue" class="@Model.BtnClass" />
                <a class="btn btn-warning" href="/Unvan/List">İptal</a>
            </form>
            <br />
        </div>
    </div>
</div>

